- content_for :sidebar do
  .panel.panel-default
    .panel-heading
      %h1.panel-title Providers
    .panel-body
      - if current_page?(providers_path)
        = link_to 'New', new_provider_path, class: 'btn btn-default btn-block'

      - if @provider && !@provider.new_record?
        - unless current_page? @provider
          = link_to 'View', @provider, class: 'btn btn-default btn-block'
        - unless current_page? edit_provider_path(@provider)
          = link_to 'Edit', edit_provider_path(@provider), class: 'btn btn-default btn-block'

      - unless current_page?(providers_path)
        = link_to providers_path, class: 'btn btn-default btn-block' do
          %i.fa.fa-arrow-left
          Back to providers list
