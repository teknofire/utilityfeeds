<%= simple_form_for(@outage_report) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :service %>
    <%= f.association :provider %>
    <%= f.input :location %>
    <%= f.input :address %>
    <%= f.input :notes %>
    <%= f.input :started_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
